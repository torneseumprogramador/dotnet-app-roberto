<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - dotnet_app_roberto</title>
    <link rel="stylesheet" href="~/css/tailwind.min.css" asp-append-version="true" />
</head>
<body class="bg-gray-100 text-gray-900">
    <header class="bg-white shadow-md">
        <nav class="container mx-auto flex items-center justify-between p-4">
            <a class="text-lg font-bold" asp-area="" asp-controller="Home" asp-action="Index">dotnet_app_roberto</a>
            <button class="md:hidden text-gray-500 focus:outline-none" id="menu-button">
                &#9776;
            </button>
            <ul class="hidden md:flex space-x-6" id="menu">
                <li>
                    <a class="text-gray-700 hover:text-blue-500" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li>
                    <a class="text-gray-700 hover:text-blue-500" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </li>
            </ul>
        </nav>
    </header>
    
    <div class="container mx-auto p-4">
        <main role="main" class="pb-6">
            @RenderBody()
        </main>
    </div>
    
    <footer class="bg-white border-t p-4 text-center text-gray-500">
        &copy; 2025 - dotnet_app_roberto - <a class="text-blue-500" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </footer>
    
    <script>
        document.getElementById('menu-button').addEventListener('click', function() {
            document.getElementById('menu').classList.toggle('hidden');
        });
    </script>
    
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
